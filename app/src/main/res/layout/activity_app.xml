<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/scroll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/scroll_bar_menu"
        app:itemBackground="@android:color/transparent"
        app:itemActiveIndicatorStyle="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        app:itemTextAppearanceActive="@color/teal_200"
        app:itemTextAppearanceInactive="@color/white"
        app:itemIconTint="@android:color/holo_orange_light"
        app:itemHorizontalTranslationEnabled="true"
        app:itemTextColor="@color/white">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>